@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        @foreach (var p in ViewData["products"] as IEnumerable<Product>)
        {
            <div class="col-12 col-sm-6 col-md-3 col-lg-3" style="margin-top:15px;margin-bottom:15px;">
                <div class="card">
                    <div style="padding: 15px;">
                        <img class="card-img-top" src="~/@p.Image" alt="Card image cap" width="220" height="250">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text"><h5 style="color:red;">@String.Format("{0:0,00}", p.Price)</h5></p>
                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@p.Id" class="btn btn-primary">Buy Now</a>
                       
                    </div>
                </div>
            </div>
        }
    </div>
</div>
